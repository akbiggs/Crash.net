<?xml version="1.0" encoding="utf-8" ?>
<ParticleSystem>
  <XNAParameters>
    <!-- XNA-specific parameters go here.-->
    <spriteEffects x="None"></spriteEffects>
    <blendState x="AlphaBlend"></blendState>
    <spriteSortMode x="Deferred"></spriteSortMode>
    <textureList>
      <texture x="square_particle"></texture>
    </textureList>
  </XNAParameters>
  <!-- Explicit parameters for emitter go here: -->
  <EmitterParameters>
    <location x="300" y="350" z="0"></location>
    <dimension x="25" y="25" z="0"></dimension>
    <maxNumParticles x="500"></maxNumParticles>
    <emitRate x="10"></emitRate>
    <meanEmitDelay x="0.1"></meanEmitDelay>
    <emitterLifetime x="1000"></emitterLifetime>
    <permanentParticles x="false"></permanentParticles>
  </EmitterParameters>
  <!-- Random parameters for particle generation go here:-->
  <ParticleParameters>
    <position>
      <alpha x="0" y="0" z="0"></alpha>
      <beta x="25" y="25" z="0"></beta> 
      <distribution x="Normal"></distribution>
    </position>
    
    <velocity>
      <alpha x="0" y="0" z="0"></alpha>
      <beta x="0" y="0" z="0"></beta>
      <distribution x="Fixed"></distribution>
    </velocity>
    
    <acceleration>
      <alpha x="0.0" y="0.0" z="0"></alpha>
      <beta x="0.0" y="0.00" z="0"></beta>
      <distribution x="Fixed"></distribution>
    </acceleration>


    <color>
    <alpha x="0" y="0" z="200"></alpha>
    <beta x="255" y="255" z="255"></beta>
    <distribution x="Uniform"></distribution>
    </color>
    
    <angle alpha="0" beta="1.0" distribution="Uniform"></angle>
    <angularVelocity alpha="0.25" beta="0.5" distribution="Uniform"></angularVelocity>
    <transparency alpha="0.75" beta="1.0" distribution="Uniform"></transparency>
    <transparencyDelta alpha="-3.0" beta="-2.5" distribution="Uniform"></transparencyDelta>
    <size alpha="1.00" beta="0.05" distribution="Normal"></size>
    <growth alpha="0.0" beta="0.1" distribution="Uniform"></growth>
    <ttl alpha="1000" beta="100" distribution="Normal"></ttl>
  </ParticleParameters>
    
</ParticleSystem>
