<?xml version="1.0" encoding="utf-8" ?>
<ParticleSystem>
  <!-- XNA-specific parameters go here.-->
  <XNAParameters>
    <spriteEffects x="None"></spriteEffects>
    <blendState x="AlphaBlend"></blendState>
    <spriteSortMode x="Deferred"></spriteSortMode>
    <textureList>
      <texture x="smoke"></texture>
    </textureList>
  </XNAParameters>
  <!-- Explicit parameters for emitter go here: -->
  <EmitterParameters>
    <location x="450" y="350" z="0"></location>
    <dimension x="25" y="25" z="0"></dimension>
    <maxNumParticles x="500"></maxNumParticles>
    <emitRate x="5"></emitRate>
    <meanEmitDelay x="1"></meanEmitDelay>
    <emitterLifetime x="100"></emitterLifetime>
    <permanentParticles x="false"></permanentParticles>
  </EmitterParameters>
  <!-- Random parameters for particle generation go here:-->
  <ParticleParameters>
    <position>
      <alpha x="0" y="0" z="0"></alpha>
      <beta x="50" y="50" z="0"></beta>
      <distribution x="Normal"></distribution>
    </position>

    <speed alpha="0.2" beta="0.2" distribution="Uniform"></speed>
    <direction alpha="" beta="0.2" distribution="Uniform"></direction>

    <velocity>
      <alpha x="0" y="-25" z="0"></alpha>
      <beta x="0" y="0" z="0"></beta>
      <distribution x="Uniform"></distribution>
    </velocity>

    <acceleration>
      <alpha x="0.0001" y="-0.0001" z="0"></alpha>
      <beta x="0.0" y="0.0" z="0"></beta>
      <distribution x="Uniform"></distribution>
    </acceleration>

    <color>
      <alpha x="255" y="255" z="255"></alpha>
      <beta x="255" y="255" z="255"></beta>
      <distribution x="Fixed"></distribution>
    </color>

    <angle alpha="0" beta="1.0" distribution="Uniform"></angle>
    <angularVelocity alpha="5" beta="25" distribution="Uniform"></angularVelocity>
    <transparency alpha="0.5" beta="1.0" distribution="Uniform"></transparency>
    <transparencyDelta alpha="-5.0" beta="-0.25" distribution="Uniform"></transparencyDelta>
    <size alpha="0.25" beta="0.005" distribution="Normal"></size>
    <growth alpha="0.0" beta="0.1" distribution="Uniform"></growth>
    <ttl alpha="1000" beta="50" distribution="Normal"></ttl>
  </ParticleParameters>

</ParticleSystem>

